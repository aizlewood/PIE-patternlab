<div class="remodal" data-remodal-id="modal-login" data-remodal-options="hashTracking: false">
  <button data-remodal-action="close" class="remodal-close"></button>
		
			<header class="article-header">
				<h2>Login</h2>
				{{> molecules-byline }}
			</header>
		

		<form method="post" action="{{ url }}" class="comment-form">
			<fieldset>
				<div class="field-container">
					<label for="comment-email">Your Email <abbr title="Required">*</abbr></label>
					<input id="comment-email" type="email" placeholder="Your email address" required>
				</div>
			    <div class="field-container">
			        <label for="password">Your Password <abbr title="Required">*</abbr></label>
			        <input id="password" type="password" placeholder="Type your Password" required>
			    </div>
			</fieldset>

		<p><button class="btn" data-remodal-action="confirm" class="remodal-confirm" type="submit">Login</button></p>					
		</form>

		<div class="block">
			<div class="middle">
				<p class="small">Don't have an account? <a href="{{ url }}">Create one now</a></p>
			</div>
		</div>


  <br>
  <button data-remodal-action="cancel" class="remodal-cancel">Cancel</button>
</div>

<!-- Begin Footer -->
<footer class="footer" role="contentinfo">
	<div class="lc">

		<div class="g g-3up">
			<div class="gi">{{> atoms-logo-on-dark }}</div>
			<div class="gi">{{> molecules-footer-nav }}</div>
			<div class="gi">{{> molecules-newsletter }}</div>
		</div>

		<hr class="footer">
		<p class="copyright">&copy; 2015 The PIE Partnership</p>
		<p class="terms-conditions"><a href="{{ url }}">Terms &amp; Conditions</a> / <a href="{{ url }}">Privacy Policy</a></p>
	</div>
</footer>
<!-- End Footer -->