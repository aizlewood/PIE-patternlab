<div class="page" id="page">
	{{> organisms-header }}

		<div class="page-title">
			<header class="article-header">
				<h1>All Jobs</h1>
				{{> molecules-byline }}
			</header>
		</div>

		<div class="job--listings filter">
			<div class="inner">

				<ul class="inline-list job--listings search-controls">
					<li class="wide">
					    <div class="field-container ondark">
					        <label class="light" for="search">Search</label>
					        <input id="search" type="search" placeholder="Enter Search Term">
					    </div>
					</li>
					<li class="narrow">
					    <div class="field-container ondark">
					        <label class="light" for="search">Search</label>
					        <input id="search" type="search" placeholder="Enter Search Term">
					    </div>
					</li>
					<li class="wide">
						<fieldset>
						    <div class="field-container ondark">
						        <label class="light" for="select">Select</label>
						        <select id="select">
						            <optgroup label="Option Group">
						                <option>Option One</option>
						                <option>Option Two</option>
						                <option>Option Three</option>
						            </optgroup>
						        </select>
						    </div>
						</fieldset>
					</li>
					<li class="narrow last">
						<a href="#" class="btn">Search Jobs</a>
					</li>
				</ul>


			</div>
		</div>

		<div class="utility-nav">
			<div class="inner">

				<div class="g g-2up">
					<div class="gi gi-1-3">
						<legend class="utility-nav--label"><strong>Filter by type</strong></legend>
					</div>
					<div class="gi gi-2-3">
						<form action="#">
						    <fieldset class="options">
						        <ul class="inline-list filters">
						            <li><label class="light" for="checkbox1"><input id="checkbox1" name="checkbox" type="checkbox" checked="checked"> Fulltime</label></li>
						            <li><label class="light" for="checkbox2"><input id="checkbox2" name="checkbox" type="checkbox"> Part-time</label></li>
						            <li><label class="light" for="checkbox3"><input id="checkbox3" name="checkbox" type="checkbox"> Fixed term</label></li>
						            <li><label class="light" for="checkbox3"><input id="checkbox3" name="checkbox" type="checkbox"> Freelance</label></li>
						            <li><label class="light" for="checkbox3"><input id="checkbox3" name="checkbox" type="checkbox"> Other</label></li>       
						        </ul>
						    </fieldset>
						</form>
					</div>
				</div>

			</div>
		</div>

	<div role="main">

		<div class="listings top-shelf">

		<div class="row">
			<div class="half"><br />{{> molecules-topshelf-title }}</div>
			<div class="half right"></div>
		</div>

			{{> organisms-job-listing }}
		</div>

		<div class="listings">

		<div class="row">
			<div class="half">{{> molecules-results-title }}</div>
			<div class="half right">{{> atoms-rss }}</div>
		</div>

			{{> organisms-job-listing }}
			{{> molecules-job-listings-load-more }}
		</div>


	</div><!--End role=main-->
	{{> organisms-prefooter }}
	{{> organisms-footer }}
</div>